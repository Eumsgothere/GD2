private bool canMove = false;  

if (GUI.Button(new Rect(Screen.width / 2 - 60, Screen.height / 2 + 20, 120, 40), "START"))
{
    if (playerName.Trim() != "")
    {
        gameStarted = true;
        canMove = true;     // <-- player can move after start
    }
}

