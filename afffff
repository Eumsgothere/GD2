using UnityEngine;
using UnityEngine.UI;

public class MenuSc : MonoBehaviour
{
    [SerializeField] private GameObject agent;   // Reference to the agent GameObject
    [SerializeField] private GameObject menuUI;  // Reference to the menu Canvas/UI

    // Called when Start button is clicked
    public void OnStartButtonClicked()
    {
        HideMenuUI();       // Hide the menu
        ShowPlayer();       // Show/activate the agent
    }

    void Start()
    {
        // Ensure agent is hidden at the beginning
        if (agent != null)
        {
            agent.SetActive(false);
        }
    }

    void Update()
    {
        // Optional: add timer or other logic here
    }

    public void HideMenuUI()
    {
        if (menuUI != null)
        {
            menuUI.SetActive(false);
        }
    }

    public void ShowPlayer()
    {
        if (agent != null)
        {
            agent.SetActive(true);
        }
    }
}
