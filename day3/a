using UnityEngine;

public class BallScript : MonoBehaviour
{
    private Rigidbody rb;
    [SerializeField] private float lifetime = 5f; // how long before the ball disappears

    private void Awake()
    {
        // Automatically find Rigidbody component
        rb = GetComponent<Rigidbody>();

        if (rb == null)
        {
            Debug.LogError("No Rigidbody found on " + gameObject.name);
        }
    }

    public void Shoot(Vector3 direction, float force)
    {
        if (rb == null)
        {
            Debug.LogError("Cannot shoot â€” Rigidbody missing on " + gameObject.name);
            return;
        }

        rb.linearVelocity = Vector3.zero;
        rb.AddForce(direction * force, ForceMode.VelocityChange);

        // Destroy after a few seconds to clean up
        Destroy(gameObject, lifetime);
    }
}