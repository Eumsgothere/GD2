GUI.Label(new Rect(ScreenWidthHalf - 150, ScreenHeightHalf - 120, 200, 30), $"Target Hits: {targetLife}");
            if (GUI.Button(new Rect(ScreenWidthHalf + 50, ScreenHeightHalf - 120, 40, 25), "2"),"Toggle") targetLife = 2;
            if (GUI.Button(new Rect(ScreenWidthHalf + 100, ScreenHeightHalf - 120, 40, 25), "3"),"Toggle") targetLife = 3;
            if (GUI.Button(new Rect(ScreenWidthHalf + 150, ScreenHeightHalf - 120, 40, 25), "4"),"Toggle") targetLife = 4;
